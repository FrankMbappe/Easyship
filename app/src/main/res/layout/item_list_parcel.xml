<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    app:cardElevation="7dp">

    <LinearLayout
        android:id="@+id/item_list_parcel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/AppTheme"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_list_parcel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chaussures pour homme"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/samsung_sans_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_id_dots"
                android:fontFamily="@font/samsung_sans_bold"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/item_list_parcel_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COL-HSBC-0036468"
                android:fontFamily="@font/samsung_sans_light"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/item_list_parcel_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/fmt_today_date"
            android:textSize="13sp"
            android:fontFamily="@font/samsung_sans_regular"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>